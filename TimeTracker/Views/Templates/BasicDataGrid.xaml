<DataGrid x:Class="TimeTracker.Views.Templates.BasicDataGrid"
          xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
          xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
          xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
          xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
          mc:Ignorable="d"
          d:DesignWidth="300" d:DesignHeight="100"
          BorderThickness="0"

          AutoGenerateColumns="False"
          CanUserResizeColumns="False"
          CanUserReorderColumns="False"
          CanUserSortColumns="False"

          RowHeaderWidth="0"
          CanUserResizeRows="False"

          IsReadOnly="True"

          SelectionMode="Single"
          SelectionUnit="FullRow"

          Background="White"
          GridLinesVisibility="Horizontal"
          HorizontalGridLinesBrush="GhostWhite"
          VerticalGridLinesBrush="GhostWhite"
          
          CellStyle="{StaticResource BasicDataGridCellStyle}">
</DataGrid>
