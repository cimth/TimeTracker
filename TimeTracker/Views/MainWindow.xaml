<Window x:Class="TimeTracker.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TimeTracker"
        xmlns:viewModels="clr-namespace:TimeTracker.ViewModels"
        xmlns:createUpdate="clr-namespace:TimeTracker.Views.CreateUpdate"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="MainWindow" Height="600" Width="1200">
    <Window.DataContext>
        <viewModels:MainWindowViewModel/>
    </Window.DataContext>
    <DockPanel>
        <StackPanel DockPanel.Dock="Left">
            <Button Command="{Binding ShowCreateUpdateEntryDialogCommand}">
                Create Entry
            </Button>
            <Button Command="{Binding ShowCreateUpdateCategoryDialogCommand}">
                Create Category
            </Button>
        </StackPanel>
        
        <Grid>
        </Grid>
    </DockPanel>
</Window>
